{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "carbon-blocks/badge",
	"version": "1.0.0",
	"category": "carbon-blocks",
	"supports": {
		"html": false,
    "anchor": true,
		"customClassName": true,
		"multiple": true,
		"reusable": true,
		"align": [ "wide", "full" ],
		"color": {
			"gradients": true,
			"link": false,
			"__experimentalDefaultControls": {
				"background": true,
				"text": true
			}
		},
		"spacing": {
			"blockGap": true,
			"margin": true,
			"padding": true,
			"__experimentalDefaultControls": {
				"margin": false,
				"padding": true,
				"blockGap": true
			}
		},
		"layout": {
			"allowSwitching": false,
			"allowInheriting": false,
			"allowEditing": false,
			"default": {
				"type": "flex"
			}
		},
		"__experimentalBorder": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true,
			"__experimentalDefaultControls": {
				"color": true,
				"radius": true,
				"style": true,
				"width": true
			}
		},
    "typography": {
      "fontSize": false,
      "lineHeight": false,
			"__experimentalFontFamily": false,
      "__experimentalFontWeight": false,
      "__experimentalFontStyle": false,
      "__experimentalTextTransform": false,
			"__experimentalTextDecoration": false,
      "__experimentalLetterSpacing": false,
      "__experimentalDefaultControls": {
        "fontSize": false,
        "FontFamily": false
      }
    }
	},
	"attributes": {
		"showActions": {
			"type": "boolean",
			"default": true
		},
		"showIcon": {
			"type": "boolean",
			"default": true
		},
		"badgeContent":{
			"type": "string",
			"default": ""
		},
		"orientation": {
			"type": "string",
			"default": "left"
		},
		"style": {
			"type": "object",
			"default": {
				"color": {
					"background": "white",
					"text": "black"
				},
				"border": {
					"radius": "5px"
				},
				"spacing": {
					"blockGap": "5px",
					"padding": {
						"top": "5px",
						"right": "15px",
						"bottom": "5px",
						"left": "15px"
					}
				}
			}
		}
	},
	"usesContext": [],
	"providesContext": {},
	"textdomain": "carbon-blocks",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}
